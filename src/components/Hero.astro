---
export interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "I Love Bricklaying And We Are Professional Title",
  subtitle = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
} = Astro.props;
---

<div class="relative bg-primary pt-24 pb-32 md:pb-40 lg:pb-48 overflow-hidden min-h-[80vh]">
  <!-- Decorative brick patterns in the background -->
  <div class="absolute top-1/4 -right-12 w-48 h-32 border-2 border-secondary transform rotate-6 opacity-20"></div>
  <div class="absolute bottom-1/3 -left-8 w-36 h-24 border-2 border-secondary transform -rotate-12 opacity-20"></div>
  <div class="absolute top-2/3 right-1/4 w-40 h-28 border-2 border-secondary transform rotate-[-8deg] opacity-20"></div>
  <div class="absolute bottom-24 left-1/4 w-52 h-20 border-2 border-secondary transform rotate-[4deg] opacity-20"></div>
  <div class="absolute top-1/2 -left-16 w-32 h-32 border-2 border-secondary transform rotate-12 opacity-20"></div>
  <div class="absolute bottom-12 right-1/3 w-44 h-16 border-2 border-secondary transform -rotate-3 opacity-20"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 pt-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Side - Text Content -->
      <div class="text-white">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight font-heading leading-tight mb-8">
          {title}
        </h1>
        <p class="text-lg md:text-xl text-gray-300 mb-12 max-w-xl leading-relaxed">
          {subtitle}
        </p>
        
        <div class="flex flex-wrap gap-4">
          <a 
            href="/contact" 
            class="px-6 py-3 bg-secondary text-white font-medium rounded hover:bg-secondary-dark transition-colors duration-200"
          >
            Contact Us
          </a>
          <a 
            href="/projectss" 
            class="px-6 py-3 border-2 border-white bg-white text-black font-medium rounded hover:bg-primary hover:text-white hover:transition-colors duration-200"
          >
            View Our Projects
          </a>
        </div>
      </div>
      
      <!-- Right Side - Stacked Images -->
      <div class="relative">
        <!-- Brick Pattern Background Elements -->
        <div class="absolute -top-6 -right-8 w-32 h-24 border-2 border-secondary transform rotate-[12deg] opacity-70 z-0"></div>
        <div class="absolute -bottom-12 left-4 w-36 h-28 border-2 border-secondary transform -rotate-[6deg] opacity-70 z-0"></div>
        <div class="absolute top-12 -left-6 w-28 h-20 border-2 border-secondary transform rotate-[-15deg] opacity-70 z-0"></div>
        <div class="absolute -bottom-4 -right-10 w-40 h-24 border-2 border-secondary transform rotate-[8deg] opacity-70 z-0"></div>
        
        <!-- Main Image -->
        <div class="relative z-10 rounded-xl overflow-hidden border-2 border-white shadow-xl">
          <img 
            src="/images/hero_stock_photo_01.jpg" 
            alt="Construction professional" 
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </div>
</div>