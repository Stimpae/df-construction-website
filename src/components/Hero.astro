---
export interface Props {
  title?: string;
  subtitle?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "Quality Bricklaying & Construction Services",
  subtitle = "Building your dream projects with precision, reliability, and craftsmanship",
  buttonText = "View Our Projects",
  buttonLink = "/projects"
} = Astro.props;
---

<div class="relative bg-gray-900">
  <!-- Background Image Overlay -->
  <div class="absolute inset-0">
    <img 
      src="/images/hero-bg.jpg" 
      alt="Construction site" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-secondary-light opacity-60"></div>
  </div>
  
  <!-- Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32 md:py-40 lg:py-48">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-white font-heading">
        {title}
      </h1>
      <p class="mt-6 max-w-xl mx-auto text-xl md:text-2xl text-neutral-light">
        {subtitle}
      </p>
      <div class="mt-10 sm:flex sm:justify-center">
        <div class="rounded-md shadow">
          <a 
            href={buttonLink} 
            class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary-dark md:py-4 md:text-lg md:px-10"
          >
            {buttonText}
          </a>
        </div>
        <div class="mt-3 sm:mt-0 sm:ml-3">
          <a 
            href="/contact" 
            class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-secondary bg-white hover:bg-neutral-light md:py-4 md:text-lg md:px-10"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </div>
</div>