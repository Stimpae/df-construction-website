---
export interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Professional Bricklaying Services",
  subtitle = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
} = Astro.props;

// Social media links
const socialLinks = [
  { platform: "Facebook", icon: "fab fa-facebook-f", url: "https://facebook.com/" },
  { platform: "Instagram", icon: "fab fa-instagram", url: "https://instagram.com/" },
  { platform: "Twitter", icon: "fab fa-twitter", url: "https://twitter.com/" },
  { platform: "LinkedIn", icon: "fab fa-linkedin-in", url: "https://linkedin.com/" }
];
---

<div class="bg-white py-4 px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <!-- Hero container with margin on all sides for that "inset" look -->
    <div class="relative overflow-hidden h-[70vh]">
      <!-- Background Image with dark overlay and blur -->
      <div class="absolute inset-0">
        <img 
          src="/images/hero_stock_photo_01.jpg" 
          alt="Bricklaying professionals at work" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-primary/55 backdrop-blur-[2px]"></div>
      </div>

      <!-- Content -->
      <div class="relative h-full flex items-center">
        <div class="max-w-3xl mx-auto px-3 sm:px-8 md:px-12 lg:mx-0 lg:ml-24 text-white">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight font-heading leading-tight mb-2 lg:mb-6 ">
            {title}
          </h1>
          <p class="text-base md:text-base lg:text-base text-white mb-2 lg:mb-8 max-w-xl leading-relaxed">
            {subtitle}
          </p>
          
          <div class="flex flex-col gap-2 justify-center md:justify-start md:flex-row lg:justify-start lg:flex-row lg:gap-4">
            <a 
              href="/#contact" 
              class="px-6 py-4 lg:px-8 bg-white text-primary text-center rounded-full font-semiboldfont-medium hover:text-white hover:bg-primary transition-colors duration-200"
            >
              Get a quote

              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 inline-block ml-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            
            <a 
              href="/projects" 
              class="px-6 py-4 lg:px-8 border border-white text-white text-center rounded-full font-medium hover:bg-primary transition-colors duration-200"
            >
              Browse Projects
            </a>
          </div>
        </div>
      </div>
      
      <!-- Scroll Down Button -->
      <div class="absolute bottom-1 lg:bottom-8 left-0 right-0 flex justify-center">
        <button 
          id="scroll-down-btn"
          class="w-10 h-10 rounded-full bg-white flex items-center justify-center hover:bg-white/80 transition-all duration-300 animate-bounce"
          aria-label="Scroll to services section"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="black" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Social Media Section -->
    <div class="py-12 text-center">
      <h3 class="text-xl lg:text-2xl font-medium text-primary mb-2">Follow our work on social media</h3>
      <div class="flex justify-center">
        {socialLinks.map(social => (
          <a 
            href={social.url} 
            aria-label={`Follow us on ${social.platform}`}
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-9 h-9 lg:w-12 lg:h-12 rounded-full flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors duration-300"
          >
            <i class={`${social.icon} text-xl`}></i>
          </a>
        ))}
      </div>
    </div>
  </div>
</div>

<script>
  // Scroll to services section when the button is clicked
  document.addEventListener('DOMContentLoaded', () => {
    const scrollButton = document.getElementById('scroll-down-btn');
    
    if (scrollButton) {
      scrollButton.addEventListener('click', () => {
        const servicesSection = document.getElementById('services');
        
        if (servicesSection) {
          servicesSection.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    }
  });
</script>