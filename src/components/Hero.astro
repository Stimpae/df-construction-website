---
export interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Professional Bricklaying Services",
  subtitle = "Quality craftsmanship for commercial and residential projects. Over 25 years of experience in creating beautiful, durable brick structures.",
} = Astro.props;
---

<div class="bg-white py-4 px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <!-- Hero container with margin on all sides for that "inset" look -->
    <div class="relative overflow-hidden h-[65vh]">
      <!-- Background Image with dark overlay and blur -->
      <div class="absolute inset-0">
        <img 
          src="/images/hero_stock_photo_01.jpg" 
          alt="Bricklaying professionals at work" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-primary/70 backdrop-blur-[2px]"></div>
      </div>

      <!-- Content -->
      <div class="relative h-full flex items-center">
        <div class="max-w-3xl mx-auto px-6 sm:px-8 md:px-12 lg:mx-0 lg:ml-24 text-white">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight font-heading leading-tight mb-6">
            {title}
          </h1>
          <p class="text-lg md:text-xl text-white/90 mb-8 max-w-xl leading-relaxed">
            {subtitle}
          </p>
          
          <div class="flex flex-wrap gap-4">
            <a 
              href="/contact" 
              class="px-6 py-3 bg-secondary text-white font-medium hover:bg-primary transition-colors duration-200 hover:text-primary transition-colors duration-200"
            >
              Get a Free Quote
            </a>
            <a 
              href="/projects" 
              class="px-6 py-3 bg-white text-primary font-medium hover:bg-primary transition-colors duration-200 hover:text-white transition-colors duration-200"
            >
              View Our Projects
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>