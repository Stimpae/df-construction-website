// Service areas
const serviceAreas = [
  "Bristol", "Bath", "Gloucester", "Cheltenham", "Swindon", 
  "Cardiff", "Newport", "Weston-super-Mare", "Taunton", "Exeter"
];
---

<section id="services" class="py-20 bg-neutral">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header with horizontal line -->
    <div class="flex items-center mb-2 md:mb-3 lg:mb-8">
      <div class="w-6 h-[0.5px] bg-gray-600 mr-4"></div>
      <p class="text-primary text-sm uppercase tracking-wider flex-end">OUR SERVICES</p>
    </div>
    
    <!-- Main heading and description in two columns -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-4 lg:gap-6 mb-10">
      <div>
        <h2 class="text-4xl md:text-5xl font-heading font-bold text-primary leading-tight">
          A comprehensive<br>set of services
        </h2>
      </div>
      <div class="flex flex-col justify-end">
        <p class="text-gray-600 text-base font-medium leading-relaxed">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
        </p>
      </div>
    </div>
    
    <!-- Bottom border -->
    <div class="w-full h-[0.5px] bg-gray-400 mb-8"></div>
    
    <!-- Services Grid with brick stacking effect -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service, index) => (
        <div class={`group ${index % 2 === 0 ? 'md:mt-0' : 'md:mt-12'}`}>
          <!-- Image Container with overlay -->
          <div class="relative aspect-square overflow-hidden mb-4">
            <img 
              src={service.image} 
              alt={service.title} 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <!-- Black overlay filter -->
            <div class="absolute inset-0 bg-black/40 group-hover:bg-black/30 transition-colors duration-300"></div>
          </div>
          
          <!-- Content with number positioned to the right of title -->
          <div class="flex justify-between items-start mb-2">
            <h3 class="text-xl font-bold text-primary">{service.title}</h3>
            <span class="text-2xl font-bold text-gray-300">{service.id}</span>
          </div>
          <p class="text-gray-600 text-sm">
            {service.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Bottom border -->
    <div class="w-full h-[0.5px] bg-gray-400 mt-8"></div>
    
    <!-- Service Areas Section -->
    <div class="mt-8 text-center">
      <h3 class="text-xl lg:text-2xl font-medium text-primary mb-4">Where we work</h3>
      <div class="flex flex-wrap justify-center gap-1 md:gap-3 mb-6">
        {serviceAreas.map(area => (
          <span class="px-4 py-2 bg-white rounded-full text-primary text-sm font-medium border border-gray-200">
            {area}
          </span>
        ))}
      </div>  
      <p class="text-gray-600 max-w-xl mx-auto mb-6">
        Don't see your location on the list? no trouble, just get in touch and we can see if we can help you out.
      </p>

      <div class="flex flex-col gap-3 justify-center md:flex-row lg:flex-row lg:gap-4">
        <a 
          href="/contact" 
          class="px-6 py-4 lg:px-8 bg-black text-white text-center rounded-full font-semiboldfont-medium hover:text-white hover:bg-primary/90 transition-colors duration-200"
        >
          Get a quote

          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 inline-block ml-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        
        <a 
          href="/projects" 
          class="px-6 py-4 lg:px-8 border border-black text-black text-center rounded-full font-medium hover:text-white hover:bg-primary transition-colors duration-200"
        >
          Browse Projects
        </a>
      </div>
      
      
    </div>
  </div>
</section>