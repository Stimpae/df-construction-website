---
export interface Props {
  name: string;
  position?: string;
  company?: string;
  testimonial: string;
  image?: string;
}

const { 
  name, 
  position, 
  company, 
  testimonial, 
  image = "/images/avatar-placeholder.png" 
} = Astro.props;

---

<div class="flex flex-col h-full border border-gray-200">
  <!-- Testimonial Content -->
  <div class="flex-grow bg-neutral p-6">
    <p class="text-gray-600 mb-4">"{testimonial}"</p>
    
   
  </div>
  
  <!-- Client Info -->
  <div class="flex items-center p-6 border-t border-gray-200 bg-white">
    <div>
      <h4 class="text-md font-bold text-primary">{name}</h4>
      {(position || company) && (
        <p class="text-xs text-gray-500">
          {position}{position && company && ', '}{company}
        </p>
      )}
    </div>
  </div>
</div>