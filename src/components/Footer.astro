---
const currentYear = new Date().getFullYear();
---

<footer class="bg-secondary-dark text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div>
        <div class="flex items-center mb-4">
          <img src="/images/logo.svg" alt="Company Logo" class="h-10 w-auto" />
          <span class="ml-2 text-xl font-bold">YourCompany</span>
        </div>
        <p class="text-gray-400 mb-4">
          Professional bricklaying and construction services with a commitment to quality and customer satisfaction.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-primary">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-primary">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-primary">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-primary">
            <i class="fab fa-linkedin-in"></i>
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-gray-400 hover:text-primary">Home</a>
          </li>
          <li>
            <a href="/projects" class="text-gray-400 hover:text-primary">Projects</a>
          </li>
          <li>
            <a href="/contact" class="text-gray-400 hover:text-primary">Contact</a>
          </li>
          <li>
            <a href="#about" class="text-gray-400 hover:text-primary">About Us</a>
          </li>
          <li>
            <a href="#testimonials" class="text-gray-400 hover:text-primary">Testimonials</a>
          </li>
        </ul>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-lg font-bold mb-4">Our Services</h3>
        <ul class="space-y-2">
          <li>
            <a href="#" class="text-gray-400 hover:text-primary">Residential Brickwork</a>
          </li>
          <li>
            <a href="#" class="text-gray-400 hover:text-primary">Commercial Construction</a>
          </li>
          <li>
            <a href="#" class="text-gray-400 hover:text-primary">Renovations</a>
          </li>
          <li>
            <a href="#" class="text-gray-400 hover:text-primary">Restorations</a>
          </li>
          <li>
            <a href="#" class="text-gray-400 hover:text-primary">Design Consultation</a>
          </li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-bold mb-4">Contact Info</h3>
        <ul class="space-y-3">
          <li class="flex items-start">
            <i class="fas fa-map-marker-alt text-primary mt-1 mr-3"></i>
            <span class="text-gray-400">
              123 Construction Way<br>
              Bricktown, BT 12345
            </span>
          </li>
          <li class="flex items-start">
            <i class="fas fa-phone-alt text-primary mt-1 mr-3"></i>
            <span class="text-gray-400">
              (123) 456-7890
            </span>
          </li>
          <li class="flex items-start">
            <i class="fas fa-envelope text-primary mt-1 mr-3"></i>
            <span class="text-gray-400">
              info@yourconstructioncompany.com
            </span>
          </li>
          <li class="flex items-start">
            <i class="fas fa-clock text-primary mt-1 mr-3"></i>
            <span class="text-gray-400">
              Mon-Fri: 8am-6pm<br>
              Sat: 9am-1pm
            </span>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="mt-12 pt-8 border-t border-gray-700">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400">
          &copy; {currentYear} Your Construction Company. All rights reserved.
        </p>
        <div class="mt-4 md:mt-0">
          <ul class="flex space-x-6">
            <li>
              <a href="#" class="text-gray-400 hover:text-primary text-sm">
                Privacy Policy
              </a>
            </li>
            <li>
              <a href="#" class="text-gray-400 hover:text-primary text-sm">
                Terms of Service
              </a>
            </li>
            <li>
              <a href="#" class="text-gray-400 hover:text-primary text-sm">
                Sitemap
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>