<section id="contact" class="py-20 bg-secondary text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold font-heading">Contact Us</h2>
      <div class="w-24 h-1 bg-primary mx-auto my-4"></div>
      <p class="text-lg text-gray-300 max-w-3xl mx-auto">
        Ready to start your project? Contact us today for a free consultation and quote.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div>
        <h3 class="text-2xl font-bold mb-6">Get In Touch</h3>
        
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="flex-shrink-0 text-primary text-2xl mt-1">
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-medium">Our Location</h4>
              <p class="text-gray-300 mt-2">
                123 Construction Way<br>
                Bricktown, BT 12345
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex-shrink-0 text-primary text-2xl mt-1">
              <i class="fas fa-phone-alt"></i>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-medium">Call Us</h4>
              <p class="text-gray-300 mt-2">
                (123) 456-7890<br>
                Monday-Friday: 8am-6pm
              </p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex-shrink-0 text-primary text-2xl mt-1">
              <i class="fas fa-envelope"></i>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-medium">Email Us</h4>
              <p class="text-gray-300 mt-2">
                info@yourconstructioncompany.com<br>
                quotes@yourconstructioncompany.com
              </p>
            </div>
          </div>
        </div>
        
        <div class="mt-8">
          <h4 class="text-lg font-medium mb-4">Follow Us</h4>
          <div class="flex space-x-4">
            <a href="#" class="text-white hover:text-primary text-2xl">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="#" class="text-white hover:text-primary text-2xl">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#" class="text-white hover:text-primary text-2xl">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#" class="text-white hover:text-primary text-2xl">
              <i class="fab fa-linkedin"></i>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Quick Contact Form -->
      <div>
        <h3 class="text-2xl font-bold mb-6">Send Us a Message</h3>
        <form class="space-y-4" name="contact" method="POST" data-netlify="true">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium mb-2">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full rounded-md border-gray-500 bg-gray-700 text-white shadow-sm focus:border-primary focus:ring-primary"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full rounded-md border-gray-500 bg-gray-700 text-white shadow-sm focus:border-primary focus:ring-primary"
              />
            </div>
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium mb-2">Phone</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone"
              class="w-full rounded-md border-gray-500 bg-gray-700 text-white shadow-sm focus:border-primary focus:ring-primary"
            />
          </div>
          
          <div>
            <label for="service" class="block text-sm font-medium mb-2">Service Needed</label>
            <select 
              id="service" 
              name="service"
              class="w-full rounded-md border-gray-500 bg-gray-700 text-white shadow-sm focus:border-primary focus:ring-primary"
            >
              <option value="">Select a Service</option>
              <option value="residential">Residential Brickwork</option>
              <option value="commercial">Commercial Construction</option>
              <option value="renovation">Renovation</option>
              <option value="restoration">Restoration</option>
              <option value="other">Other Services</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-2">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4" 
              required
              class="w-full rounded-md border-gray-500 bg-gray-700 text-white shadow-sm focus:border-primary focus:ring-primary"
            ></textarea>
          </div>
          
          <div>
            <button 
              type="submit"
              class="w-full md:w-auto px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-secondary bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary focus:ring-offset-gray-800"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>