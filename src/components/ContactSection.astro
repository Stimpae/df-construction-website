<section id="contact" class="py-20 bg-neutral">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <p class="text-secondary font-medium mb-2">GET IN TOUCH</p>
      <h2 class="text-3xl md:text-4xl font-bold text-primary font-heading mb-6">CONTACT<br>OUR TEAM</h2>
      <p class="text-gray-600 max-w-2xl mx-auto mb-8">
        Ready to start your project? Contact us today for a free consultation and quote.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Request a Quote Card -->
      <div class="bg-secondary rounded-lg p-6 text-white">
        <h3 class="text-xl font-bold mb-4">Request A Quote</h3>
        <p class="mb-6 text-white/80 text-sm">
          Our trained professionals always do our customers the best quality
          products and services. If ever your order is late something that will be for animation.
        </p>
        
        <form class="space-y-4">
          <div>
            <input 
              type="text" 
              placeholder="Name" 
              class="w-full p-3 rounded-md bg-white text-gray-800"
            />
          </div>
          <div>
            <input 
              type="email" 
              placeholder="Email" 
              class="w-full p-3 rounded-md bg-white text-gray-800"
            />
          </div>
          <div>
            <input 
              type="tel" 
              placeholder="Phone" 
              class="w-full p-3 rounded-md bg-white text-gray-800"
            />
          </div>
          <div>
            <select class="w-full p-3 rounded-md bg-white text-gray-800 appearance-none">
              <option value="" disabled selected>Select Your Service</option>
              <option value="residential">Residential Brickwork</option>
              <option value="commercial">Commercial Construction</option>
              <option value="renovation">Renovation</option>
              <option value="restoration">Restoration</option>
              <option value="other">Other Services</option>
            </select>
          </div>
          <div>
            <textarea 
              placeholder="Additional Details" 
              rows="4" 
              class="w-full p-3 rounded-md bg-white text-gray-800"
            ></textarea>
          </div>
          
          <div>
            <button 
              type="submit"
              class="w-full p-3 bg-primary text-white font-medium rounded-md hover:bg-primary-light transition-colors"
            >
              Submit Request
            </button>
          </div>
        </form>
      </div>
      
      <!-- Contact Info Card -->
      <div class="bg-secondary rounded-lg p-6 text-white">
        <h3 class="text-xl font-bold mb-4">Contact Info</h3>
        
        <div class="space-y-6">
          <div>
            <h4 class="text-base font-medium mb-1">Our Location</h4>
            <p class="text-white/80 text-sm">Building 101 Aston Drive, Cane Hill Park, CR5 3FP</p>
          </div>
          
          <div>
            <h4 class="text-base font-medium mb-1">Email Address</h4>
            <p class="text-white/80 text-sm">info@dfconstruction.com</p>
          </div>
          
          <div>
            <h4 class="text-base font-medium mb-1">Opening Hours</h4>
            <p class="text-white/80 text-sm">
              Mon-Fri: 8am - 6pm<br>
              Sat: 9am - 1pm
            </p>
          </div>
          
          <div>
            <h4 class="text-base font-medium mb-1">Do You Have Any Question Just Contact Us To See More</h4>
          </div>
          
          <div>
            <a 
              href="#" 
              class="inline-block px-6 py-3 bg-primary text-white font-medium rounded-md hover:bg-primary-light transition-colors"
            >
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>