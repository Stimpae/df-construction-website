---
import Layout from '../layouts/Layout.astro';
import ContactSection from '../components/ContactSection.astro';
---

<Layout title="Contact Us" description="Get in touch with our team for your bricklaying and construction needs">
  <div class="bg-gray-100 py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl md:text-4xl font-bold text-secondary font-heading">Contact Us</h1>
      <p class="mt-2 text-lg text-gray-600">
        We'd love to hear from you. Let's start a conversation about your project needs.
      </p>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 mb-12">
    <div class="bg-white rounded-lg shadow-md p-8 mb-12">
      <h2 class="text-2xl font-bold text-secondary mb-6">Our Office Hours</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-medium text-secondary">Main Office</h3>
          <p class="text-gray-700 mt-2">
            Monday - Friday: 8:00 AM - 6:00 PM<br>
            Saturday: 9:00 AM - 1:00 PM<br>
            Sunday: Closed
          </p>
        </div>
        <div>
          <h3 class="text-lg font-medium text-secondary">Customer Support</h3>
          <p class="text-gray-700 mt-2">
            Monday - Friday: 8:00 AM - 8:00 PM<br>
            Saturday: 9:00 AM - 3:00 PM<br>
            Sunday: Closed
          </p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3152.9660124425855!2d-122.41941548441884!3d37.77492077975882!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808580a6f95e4711%3A0x5db74a75d13dd72a!2sSan%20Francisco%2C%20CA%2094102!5e0!3m2!1sen!2sus!4v1623169789657!5m2!1sen!2sus"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
      ></iframe>
    </div>
  </div>
  
  <ContactSection />
</Layout>